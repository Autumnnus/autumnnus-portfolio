generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Language {
  tr
  en
  de
  fr
  es
  it
  pt
  ru
  ja
  ko
  ar
  zh
}

model Skill {
  id       String    @id @default(uuid())
  key      String    @unique // e.g. TYPESCRIPT
  name     String
  icon     String
  projects Project[]
}

model Project {
  id           String   @id @default(uuid())
  slug         String   @unique
  status       String
  category     String
  github       String?
  liveDemo     String?
  featured     Boolean  @default(false)
  coverImage   String? // URL from MinIO
  images       String[] // URLs from MinIO

  technologies Skill[]
  
  comments     Comment[]
  likes        Like[]
  views        View[]

  translations ProjectTranslation[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProjectTranslation {
  id               String   @id @default(uuid())
  language         Language
  title            String
  shortDescription String
  fullDescription  String

  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([projectId, language])
}

model BlogPost {
  id         String   @id @default(uuid())
  slug       String   @unique
  coverImage String? // Minio URL
  featured   Boolean  @default(false)
  tags       String[]
  // Date and readTime might be language specific or generic. contents.tsx has them inside translation sometimes or outside.
  // In contents.tsx: date: { tr: "...", en: "..." }. So it is translated.

  translations BlogPostTranslation[]
  comments     Comment[]
  likes        Like[]
  views        View[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BlogPostTranslation {
  id          String   @id @default(uuid())
  language    Language
  title       String
  description String
  content     String
  readTime    String
  date        String

  blogPostId String
  blogPost   BlogPost @relation(fields: [blogPostId], references: [id], onDelete: Cascade)

  @@unique([blogPostId, language])
}

model Comment {
  id          String   @id @default(uuid())
  content     String
  authorName  String
  authorEmail String
  // authorImage removed or made optional/null if not used from session
  ipAddress   String   @default("0.0.0.0")
  
  approved    Boolean  @default(true)

  blogPostId  String?
  blogPost    BlogPost? @relation(fields: [blogPostId], references: [id], onDelete: Cascade)

  projectId   String?
  project     Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
}

model Like {
  id        String   @id @default(uuid())
  ipAddress String
  createdAt DateTime @default(now())

  blogPostId String?
  blogPost   BlogPost? @relation(fields: [blogPostId], references: [id], onDelete: Cascade)

  projectId String?
  project   Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([ipAddress, blogPostId])
  @@unique([ipAddress, projectId])
}

model View {
  id        String   @id @default(uuid())
  ipAddress String
  createdAt DateTime @default(now())

  blogPostId String?
  blogPost   BlogPost? @relation(fields: [blogPostId], references: [id], onDelete: Cascade)

  projectId String?
  project   Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model WorkExperience {
  id      String @id @default(uuid())
  company String
  logo    String

  translations WorkExperienceTranslation[]

  startDate DateTime?
  endDate   DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model WorkExperienceTranslation {
  id           String   @id @default(uuid())
  language     Language
  role         String
  description  String
  locationType String

  workExperienceId String
  workExperience   WorkExperience @relation(fields: [workExperienceId], references: [id], onDelete: Cascade)

  @@unique([workExperienceId, language])
}

model SocialLink {
  id   String @id @default(uuid())
  key  String @unique // GITHUB, LINKEDIN
  name String
  href String
  icon String
}

model Profile {
  id     String @id @default(uuid())
  avatar String // URL from MinIO
  email  String
  github String
  linkedin String
  
  translations ProfileTranslation[]
}

model ProfileTranslation {
  id           String   @id @default(uuid())
  language     Language
  name         String
  title        String
  greetingText String
  description  String // Hero description
  aboutTitle   String
  aboutDescription String // About description
  
  profileId String
  profile   Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@unique([profileId, language])
}
